generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum Role {
  EMPLOYEE
  IT
  ADMIN
}

model User {
  id               Int       @id
  name             String
  email            String    @unique
  password         String
  role             Role      @default(EMPLOYEE)
  tickets          Ticket[]

  resetToken       String?     // token for password reset
  resetTokenExpiry DateTime?   // expiry time of the token

  otp              String?     // OTP for email verification
  otpExpiry        DateTime?   // Expiry for OTP
}



model Ticket {
  id                 Int       @id @default(autoincrement())
  subject            String
  description        String
  status             String    @default("open")
  priority           String    @default("P2")
  createdAt          DateTime  @default(now())
  deadline           DateTime
  resolvedAt         DateTime?
  employee           User      @relation(fields: [employeeId], references: [id])
  employeeId         Int
  archived           Boolean   @default(false)
  archivedAt         DateTime?
  archiveReason      String?
}


model NotificationContacts {
  id               Int    @id @default(autoincrement())
  itTeamLeadName   String
  itTeamLeadEmail  String
  managerName      String
  managerEmail     String
}
